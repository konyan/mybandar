<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mmpitech.mybandar.activity.ExchangeCalc">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rlExchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/main_border"
            android:gravity="center">

            <TextView
                android:id="@+id/txtEnter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_toLeftOf="@+id/spinner"
                android:gravity="center"
                android:text="0"
                android:textSize="24sp" />

            <com.rey.material.widget.Spinner
                android:id="@+id/spinner"
                style="@style/Material.Widget.Spinner"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:minHeight="@dimen/_30sdp"
                android:popupBackground="@color/templateBackground"
                app:rd_style="@style/Material.Drawable.Ripple.Wave"
                app:spn_arrowSize="10dp"
                app:spn_label="country"
                app:spn_labelEnable="true"
                app:spn_labelTextColor="@color/colorAccent"
                app:spn_labelTextSize="10sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/txtShow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/rlExchange"
            android:layout_marginLeft="@dimen/_32sdp"
            android:layout_marginRight="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/main_border"
            android:gravity="center"
            android:text="0.Ks"
            android:textSize="@dimen/_24sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_below="@+id/txtShow"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">

                <Button
                    android:id="@+id/btn7"
                    style="@style/btn"
                    android:text="7" />

                <Button
                    android:id="@+id/btn8"
                    style="@style/btn"
                    android:text="8" />

                <Button
                    android:id="@+id/btn9"
                    style="@style/btn"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/ll1">

                <Button
                    android:id="@+id/btn4"
                    style="@style/btn"
                    android:text="4" />

                <Button
                    android:id="@+id/btn5"
                    style="@style/btn"
                    android:text="5" />

                <Button
                    android:id="@+id/btn6"
                    style="@style/btn"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/ll2">

                <Button
                    android:id="@+id/btn1"
                    style="@style/btn"
                    android:text="1" />

                <Button
                    android:id="@+id/btn2"
                    style="@style/btn"
                    android:text="2" />

                <Button
                    android:id="@+id/btn3"
                    style="@style/btn"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/ll3">


                <Button
                    android:id="@+id/btn0"
                    style="@style/btn2"
                    android:text="0" />

                <Button
                    android:id="@+id/btnX"
                    style="@style/btn"
                    android:text="X" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
